<h1>Authentification</h1>

<% flash.each do |key, value| %>
      <div class="<%= flash_class(key) %>" role="alert">
            <%= value %>
      </div>
<% end %>

<% if @errors%>
  <% @errors.messages.each do |message|%>
  <div class="alert alert-danger" role="alert">
  Le champ <%= message[0] %> a le probl√®me suivant: <%= message[1][0] %>
  </div>
    <% end%>
  <% end %>

  <% if @authentification_error %>
  <div class="alert alert-danger" role="alert">
    <%= @authentification_error %> 
  </div>
  <% end %>

<%= form_with(url: "/sessions", method: "post") do |f|%>
  <%= label_tag(:email) %>
  <%= f.email_field :email, class: 'form-control', autofocus: true, placeholder:'email@email.com' %>
  <%= label_tag(:password, "Password:") %>
  <%= f.password_field :password, class: 'form-control' %>
  <%= submit_tag "Connect", class: 'btn btn-success' %>
<% end %>