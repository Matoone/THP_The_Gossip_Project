<h1>Poster un potin !</h1>

<div class= "post-new-gossip">
<h4>Postez un nouveau potin</h4>
  <% if @errors%>
  <% @errors.messages.each do |message|%>
  <div class="alert alert-danger" role="alert">
  Le champ <%= message[0] %> a le probl√®me suivant: <%= message[1][0] %>
  </div>
    <% end%>
  <% end %>
  <%= form_tag url_for(action: 'create'), method: "post" do %>
  <%= label_tag 'Titre' %>
  <% title = ''%>
  <% content = ''%>
  <%= text_field_tag 'title', title %>
  <br /><br />
  <%= label_tag 'Contenu' %>
      <%= text_area_tag 'content', content %>
      <br /> <br />
  <%= label_tag 'Tag'%>
    <%= select_tag "tag", options_from_collection_for_select(@tags, "id", "title"), include_blank: true %>
    
    <%# <%= select_tag 'tags[]', options_from_collection_for_select(@tags, "id", "title", [4,5,6]), multiple: true, size: '100%' %>
  <%= submit_tag "Create Post" %>

    <% end %>
</div>